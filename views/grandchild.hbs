<h1 class="private">Привет, {{username}}!</h1>
<p class="private nomargin">Картинки, которые понравились твоей бабушке:</p>
<div class="private popup" width="70vw"></div>
<div class="photo_gallery private pic_box">
  {{#each userPics}}
  <div class="pic_box">
    <img title="{{this.path}}" src="{{this.path}}" class="img" width="100%" height="180px">
    <p>{{this.originalname}}</p>
  </div>
  {{/each}}
</div>
<script defer src="/js/grandchild.js"></script>
<style>
  .pic_box {
    width: 200px;
    margin: 10px;
    height: 200px;
  }

  .photo_gallery {
    display: flex;
    width: 100%;
    justify-content: center;
    {{!-- background-image: url('images/2434841244a6b217d596e9.jpg'); --}}
  }

  .private {
    color: rgb(64, 110, 112);
  }

  .nomargin {
    margin-bottom: 0;
  }

  .popup {
    position: absolute;
    top: 10%;
    left: calc(width - 100px);
  }

  .popup__close-btn {
    position: absolute;
    top: -46px;
    right: -46px;
    background-image: url('images/close.svg');
    background-size: contain;
    height: 57.56px;
    width: 57.56px;
    padding: 0;
    color: #000000;
    background-color: transparent;
    border: none;
  }

  .popup_opened {
    visibility: visible;
    opacity: 1;
    background-color: rgba(0, 0, 0, 0.8);
  }

  .img {
    cursor: pointer;
  }
</style>
